---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
// import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.png";
import faqs from "@data/es/faqs.json";
import features from "@data/es/features.json";
// import pricing from "@data/fr/pricing.json";
// import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.png";
import tools from "@images/automated-tools.png";
import tools2 from "@images/tool2.jpeg";
import { getRelativeLocaleUrl } from 'astro:i18n';

// const avatarSrcs: Array<string> = [
//   "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
//   "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
//   "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
//   "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
// ];
---

<MainLayout lang="es">
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Descubre A toda makina en instagram"
    url="https://www.instagram.com/atodamakina.cl"
  />

  <HeroSection
    title=`Equipa tus proyectos con <span class="text-yellow-500 dark:text-yellow-400">A toda makina</span>`
    subTitle="Arrienda herramientas y maquinarias de alta calidad, ademas contamos con servicios de construcción expertos para todas las necesidades de tu proyecto."
    primaryBtn="Comienza a explorar"
    primaryBtnURL={getRelativeLocaleUrl("es", "products")}
    secondaryBtn="Contactar al equipo de ventas"
    secondaryBtnURL={getRelativeLocaleUrl("es", "contact")}
    src={heroImage}
    alt="Pila de cajas de productos A toda makina con herramientas y maquinarias variadas"
  />

  <ClientsSection
    title="Confian en nosotros"
    subTitle="Descubre las empresas que confían en A toda makina para sus necesidades de herramientas y maquinarias en la construcción."
  />

  <FeaturesGeneral
    title="Cumple con las exigencias de la industria"
    subTitle="En A toda makina, enfrentamos los desafíos únicos en el sector de la construcción. Desde herramientas de vanguardia hasta servicios expertos, estamos comprometidos a ayudarte a superar obstáculos y alcanzar tus objetivos."
    features={features}
  />

  <FeaturesNavs
    title={`Descubre las ventajas de <span class="text-yellow-500 dark:text-yellow-400">A toda makina</span>`}
    tabs={[
      {
        heading: "Maquinas de vanguardia",
        content:
          "Optimiza tus proyectos con las maquinas de vanguardia de A toda makina. Experimenta una mayor eficiencia en la la construcción con nuestras maquinarias de alta calidad.",
        svg: "tools",
        src: tools,
        alt: "Equipo pesado amarillo",
        first: true,
      },
      {
        heading: "Herramientas de las mejores marcas",
        content:
          "A toda makina ofrece una amplia gama de herramientas de las mejores marcas. Desde taladros hasta sierras, nuestras herramientas están diseñadas para durar y ofrecer un rendimiento excepcional.",
        svg: "dashboard",
        src: tools2,
        alt: "Herramientas de construcción",
        second: true,
      },
      {
        heading: "Características robustas",
        content:
          "Minimiza la complejidad, maximiza la productividad. Las características robustas de A toda makina están diseñadas para agilizar tu proceso de construcción, ofreciendo resultados que se destacan por su excelencia.",
        svg: "house",
        src: construction,
        alt: "Estructura metálica gris de un edificio cerca de una grúa torre durante el día",
      },
    ]}
  />

  <TestimonialsSection
    title="Acelera tus proyectos"
    subTitle="En A toda makina, estamos comprometidos a brindarte las herramientas y servicios que necesitas para acelerar tus proyectos de construcción. Descubre lo que nuestros clientes tienen que decir sobre su experiencia con nosotros."
    testimonials={[
      {
        content:
          "A toda makina ha aumentado considerablemente la eficiencia de nuestro proyecto. La calidad de sus maquinarias y herramientas es insuperable.",
        author: "Paula Zuniga",
        role: "Arquitecta",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "100+",
        description:
          "clientes satisfechos que han confiado en A toda makina para sus proyectos de construcción",
      },
      {
        count: "35%",
        description:
          "aumento en la eficiencia de los proyectos con las herramientas y servicios de A toda makina",
      },
      {
        count: "15,3%",
        description:
          "reducción en los costos de mantenimiento reportada por clientes a largo plazo",
      },
      {
        count: "2x",
        description:
          "aumento en la productividad de los proyectos con las herramientas y servicios de A toda makina",
      },
    ]}
  />

  <!-- <PricingSection pricing={pricing} /> -->

  <FAQ title="Preguntas<br />frecuentes" faqs={faqs} />

  <HeroSectionAlt
    title="Construyamos juntos"
    subTitle="A toda makina es una empresa que se dedica al arriendo de maquinarias y herramientas para la construcción, ademas de ofrecer servicios de construcción expertos para todas las necesidades de tu proyecto."
    url="https://api.whatsapp.com/send?phone=56961910135"
  />
</MainLayout>
